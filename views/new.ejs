<%- include('partials/header') %>

<div class="container">
    <form action="/properties" method="POST">
        <h3>New Property Listing</h3>

        <div class="form-group col-md-6">
        <label>Title</label>
        <input type="text" id="title" name="title" class="form-control">
        </div>
        <div class="form-group col-md-6">
        <label>Property Type</label>
        <input type="text" id="propertyType" name="propertyType" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label>Price Per Night</label>
            <input type="number" id="pricePerNight" name="pricePerNight" class="form-control">
            </div>
        <div class="form-group col-md-6">
            <label>Service Fee</label>
            <input type="number" id="serviceFee" name="serviceFee" class="form-control">
            </div>
        <div class="form-group col-md-6">
            <label>Cleaning Fee</label>
            <input type="number" id="cleaningFee" name="cleaningFee" class="form-control">
        </div>
        <div class="form-group col-md-6">
        <label>Bedrooms</label>
        <input type="number" id="bedrooms" name="bedrooms" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label>Beds</label>
            <input type="number" id="beds" name="beds" class="form-control">
            </div>
        <div class="form-group col-md-6">
            <label>Bathrooms</label>
            <input type="number" id="bathrooms" name="bathrooms" class="form-control">
            </div>        
        <div class="form-group col-md-8">
        <label>Amenities</label>
        <textarea id="amenities" name="amenities" class="form-control">
        </textarea>
        </div>
        <div class="form-group col-md-6">
            <label>Location</label>
            <label for="city">City</label>
            <input type="text" id="city" name="city" class="form-control">
            <label for="state">state</label>
            <input type="text" id="state" name="state" class="form-control">
            <label for="country">Country</label>
            <input type="text" id="country" name="country" class="form-control">
            </div>
        <div class="form-group col-md-2">
            <label>Pets Allowed</label>
            <input type="radio" name="pets" value="No Pets" class="form-control"> No
            <input type="radio" name="pets" value="Pets Allowed" class="form-control"> Yes
            </div>
        <div class="form-group col-md-2">
            <label>Smoking Allowed</label>
            <input type="radio" name="smoking" value="No Smoking" class="form-control"> No
            <input type="radio" name="smoking" value="Smoking Allowed" class="form-control"> Yes
            </div>
        <div class="form-group col-md-8">
            <label>Image name</label>
            <input type="text" id="image" name="image" class="form-control">
            </div>
    
        <div class="form-group col-md-8">
        <label>Desc</label>
        <textarea id="desc" name="desc" class="form-control">
        </textarea>
        </div>
        <div class="form-group col-md-2">
        <button type="submit" id="add" class="btn btn-outline-dark">Add Property</button>
        </div>
    
    </form>
    
    <a href="/">Cancel</a>
    </div>
    
    

<%- include('partials/footer') %>
