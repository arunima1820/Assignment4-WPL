<%- include('partials/header') %>


<div class="container">


<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">AirBnB Application</h1>
      <p class="col-md-8 fs-4">List of Reservations</p>
      <a href="/properties/new" class="btn btn-primary btn-lg" type="button">Add Property</a>
    </div>
  </div>


  <div class="row">


<% reservations.forEach(function(reservation) { %>

  <div class="card mb-3" style="max-width: 100%;">
    <div class="row g-0">
        <!-- <div class="col-fluid col-md-4">
            <img src="images/<%= property.img %>" class="img-fluid rounded-start" alt="...">
        </div> -->
        <div class="col-md-8">
            <div class="card-body" style="color:#21081a!important">
                <h5 class="card-title"><%= reservation._id %></h5>
                <p class="card-text"><%= reservation.guestID %> Active Status</p>
                <p class="card-text"><%= reservation.status %> Active Status</p>
                <p class="card-text"><%= reservation.checkInDate %> Check-In Date - <%= reservation.checkOutDate %> Check-Out Date</p>
                <p>
                  <a href="/reservations/<%= reservation._id %>" class="btn btn-primary">Show</a>
                  <!-- <a href="/properties/<%= property._id %>" class="btn btn-secondary">Edit</a> //TODO -->
                </p>
                <!-- <p class="card-text"><small class="text-muted"><%= property.location.city %>, <%= property.location.state %></small></p> -->
            </div>
        </div>
    </div>
</div>
<% }) %>

</div>
</div>
<%- include('partials/footer') %>