<%- include('partials/header') %>

<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">AirBnB Application</h1>
    <p class="col-md-8 fs-4">List of Reservations</p>
    <a href="/reservations/new" class="btn btn-primary btn-lg" type="button">Add Reservation</a>
  </div>
  <h3><%= user.name.firstName %> <%= user.name.lastName %></h5>
  <h5><%= user.email %></h5>
</div>



<% reservations.forEach(function(reservation) { %>
  <div class="card mb-3" style="max-width: 100%;">
    <div class="card-body">
    <h5 class="card-title">Reservation ID: <%= reservation._id %></h5>
    <p class="card-text">Active Status: <%= reservation.status %></p>
    <p class="card-text">Amount Due: $<%= reservation.amountDue %></p>
    <p class="card-text">
      <%= reservation.checkInDate %> - 
      <%= reservation.checkOutDate %>
    </p>
    <a href="/reservations/<%= reservation._id %>" class="btn btn-primary">Show</a>
  </div>
</div>
<divider></divider>
<% }) %>


<%- include('partials/footer') %>